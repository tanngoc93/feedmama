              <p>BE SMART, AUTOMATE & USE AI!</p>
              <a href="/resgistration" class="text-decoration-none main-btn btn-hover">GET STARTED FOR FREE</a>
            </div>
          </div>
          <div class="col-xxl-6 col-xl-6 col-lg-6">
            <div class="hero-image text-center text-lg-end">
              <img src="img/landing/hero/hero-image.svg" alt="">
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="about" class="about-section">
      <div class="container">
        <div class="row">
          <div class="col-lg-6 order-last order-lg-first">
            <div class="about-image">
