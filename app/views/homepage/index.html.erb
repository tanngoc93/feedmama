<h1 style="text-align: center; margin-top: 30px;">
  <% if current_user.present? %>
  <%= link_to "Add Facebook Page", social_accounts_facebook_code_path %><br/>
  <%= link_to "Sign Out", destroy_user_session_path, 'data-turbo-method': :delete %>
  <% else %>
  <%= link_to "Sign In", new_user_session_path %>
  <% end %>
</h1>

<hr/>

<div style="text-align: center;">
  <ul>
    <% @social_accounts.each do |social_account| %>
      <li>
        <a href="https://facebook.com/<%= social_account.resource_id %>" target="_blank">
          <h3><%= social_account.resource_name %> - <%= social_account.resource_platform.capitalize %></h3>
        </a>
      </li>
    <% end %>
  </ul>
</div>
