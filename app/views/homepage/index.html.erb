<div class="container" style="min-height: 100vh;">
  <% if current_user.present? %>
    <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-5 mb-5">
      <%= button_to(
        social_accounts_facebook_code_path,
        method: :get, data: { turbo: false },
        class: "btn btn-primary btn-lg rounded-0"
      ) do %>
        <i class="fa-brands fa-facebook"></i>&nbsp;Facebook
      <% end %>

      <%= button_to(
        social_accounts_instagram_code_path,
        method: :get, data: { turbo: false },
        class: "btn btn-danger btn-lg rounded-0"
      ) do %>
        <i class="fa-brands fa-instagram"></i>&nbsp;Instagram
      <% end %>
    </div>

    <% if @social_accounts&.any? %>
      <table class="table table-striped table-dark">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Platform</th>
            <th scope="col">Status</th>
            <th scope="col">OpenAI's Status</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @social_accounts.each do |social_account| %>
          <tr>
            <th scope="row"></th>
            <td style="text-align: left;">
              <span
                class="btn btn-info btn-sm text-light"
              >
                <%= social_account.resource_name %>
              </span>
            </td>
            <td style="text-align: left;">
              <span
                class="btn btn-info btn-sm text-light"
              >
                <%= social_account.resource_platform.capitalize %>
              </span>    
            </td>
            <td style="text-align: left;">
              <span
                class="btn btn-<%= social_account.status ? "success" : "danger" %> btn-sm"
              >
                <%= social_account.status ? "Active" : "Inactive" %>
              </span>
            </td>
            <td style="text-align: left;">
              <span
                class="btn btn-<%= social_account.processing_with_openai ? "success" : "danger" %> btn-sm"
              >
                <%= social_account.processing_with_openai ? "Active" : "Inactive" %>
              </span>    
            </td>
            <td style="text-align: left;">
              <a class="btn btn-info btn-sm text-light" href="/social_accounts/<%= social_account.id %>">
              Update
              </a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  <% else %>
    <div class="mt-5" style="text-align: center;">
      <h1>Homepage</h1>
    </div>
  <% end %>
</div>