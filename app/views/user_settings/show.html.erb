<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <%= form_for @user_setting, url: :user_settings, method: :put do |f| %>
        <div>
          <h5>
            <label for="checkboxStatus">
              Service Status (Inactive / Active)
            </label>
          </h5>
          <div class="checkbox-wrapper-5">
            <div class="check">
              <%= f.check_box :setting_status, { checked: @user_setting.active?, id: 'checkboxStatus' }, :active, :inactive  %>
              <label for="checkboxStatus"></label>
            </div>
          </div>
        </div>

        <br>

        <h3>OpenAI Service Setting</h3>

        <div class="form-group mb-3">
          <label>
            API Provider
          </label>
          <div class="input-group">
            <%= f.select :api_provider,
              options_for_select(user_setting_api_providers, @user_setting.api_provider),
              {},
              { class: "form-select" } %>
          </div>
        </div>

        <br/>

        <div class="form-group mb-3">
          <label>
            API Model (Required)
          </label>
          <div class="input-group">
            <%= f.text_field :api_model, class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            API Access Token (Required)
          </label>
          <div class="input-group">
            <%= f.text_field :api_access_token, class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            API Version (Azure only)
          </label>
          <div class="input-group">
            <%= f.text_field :api_version, class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            API Endpoint  (Azure only)
          </label>
          <div class="input-group">
            <%= f.text_field :api_endpoint, class: "rounded-0", disabled: false %>
          </div>
        </div>

        <br>

        <div class="form-group mb-3">
          <%= f.submit "UPDATE", class: "btn btn-primary text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<style type="text/css">
  div.div-container {
    max-width: 720px;
    width: 100vw;
  }

  .form-container form input,
  .form-container form textarea {
    margin: 0.3rem 0 2rem 0;
  }
</style>
