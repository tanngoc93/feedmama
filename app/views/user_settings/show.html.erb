<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <%= form_for @user_setting, url: :user_settings, method: :put do |f| %>
        <div>
          <h5>
            <label for="checkboxStatus">
              Status (Active / Inactive)
            </label>
          </h5>
          <div class="checkbox-wrapper-5">
            <div class="check">
              <%= f.check_box :setting_status, { checked: @user_setting.active?, id: 'checkboxStatus' }, :active, :inactive  %>
              <label for="checkboxStatus"></label>
            </div>
          </div>
        </div>
        <br>
        <div class="form-group mb-3">
          <label>
            API Provider
          </label>
          <div class="input-group">
            <%= f.select :api_provider,
              options_for_select(user_setting_api_providers, @user_setting.api_provider),
              {},
              { class: "form-select" } %>
          </div>
        </div>
        <br/>
        <div class="form-group mb-3">
          <label>
            Access Token (Required)
          </label>
          <div class="input-group">
            <%= f.text_field :api_access_token, placeholder: '3d89e7ef1a7c4675a7af23hhd28bbea1', class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            Model (Required)
          </label>
          <div class="input-group">
            <%= f.text_field :api_model, placeholder: 'gpt-3.5-turbo', class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            Version (Azure only)
          </label>
          <div class="input-group">
            <%= f.text_field :api_version, placeholder: '2023-07-01-preview', class: "rounded-0", disabled: false %>
          </div>
        </div>
        <div class="form-group mb-3">
          <label>
            Endpoint (Azure only)
          </label>
          <div class="input-group">
            <%= f.text_field :api_endpoint, placeholder: 'https://your-deployment-xxx.openai.azure.com/openai/deployments/your-deployment', class: "rounded-0", disabled: false %>
          </div>
        </div>

        <br>

        <div class="form-group mb-3">
          <%= f.submit "UPDATE", class: "btn btn-primary text-white" %>
        </div>
      <% end %>
    </div>
  </div>
</section>

<style type="text/css">
  div.div-container {
    max-width: 720px;
    width: 100vw;
  }

  .form-container form input,
  .form-container form textarea {
    margin: 0.3rem 0 2rem 0;
  }
</style>
