<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <h5 class="opacity">Sign in</h5>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
      <%= f.submit "Submit", class: "btn opacity" %>
      <% end %>
      <div class="register-forget opacity">
        <%= link_to "Registration", new_registration_path(resource_name), class: "text-light" %>
        <%= link_to "Forgot password", new_password_path(resource_name), class: "text-light" %>
      </div>
      <br>
      <div class="opacity" style="text-align: center;">
        <%= render "users/shared/links" %>
      </div>
      <br>
    </div>
  </div>
</section>