<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <!-- <h4>You have <b>
        <%= set_number_to_delimited(resource.token_amount, delimiter: ',') %></b> AI Tokens
      </h4> -->
      <div class="form-group mb-3">
        <%= f.label :email, class: "label" %>
        <div class="input-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-0", placeholder: "Email", disabled: true %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label "First name", class: "label" %>
        <div class="input-group">
          <%= f.text_field :first_name, class: "rounded-0", placeholder: "First name" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label "Last name", class: "label" %>
        <div class="input-group">
          <%= f.text_field :last_name, class: "rounded-0", placeholder: "Last name" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label "Password (leave blank if you don't want to change it)", class: "label" %>
        <div class="input-group">
          <%= f.password_field :password, autocomplete: "new-password", class: "rounded-0", placeholder: "Password" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label "Password confirmation", class: "label" %>
        <div class="input-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-0", placeholder: "Password confirmation" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.label "Current password", class: "label" %>
        <div class="input-group">
          <%= f.password_field :current_password, autocomplete: "current-password", class: "rounded-0", placeholder: "Current password" %>
        </div>
      </div>
      <div class="form-group mb-3">
        <%= f.submit "Update", class: "btn btn-primary login-btn btn-block" %>
      </div>
      <div class="form-group mb-3">
        <%= f.label "Unhappy?", class: "label" %><br>
        <%= link_to "Cancel my account", user_registration_path(resource_name), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
      </div>
      <% end %>
      <%= link_to "Back", :back %>
    </div>
  </div>
</section>

<style type="text/css">
  div.div-container {
    max-width: 720px;
    width: 100vw;
  }

  .form-container form input,
  .form-container form textarea {
    margin: 0.3rem 0 2rem 0;
  }
</style>
