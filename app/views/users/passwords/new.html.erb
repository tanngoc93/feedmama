<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <h6 class="opacity">FORGOT YOUR PASSWORD?</h6>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "EMAIL" %>
      <%= f.submit "SEND ME INSTRUCTIONS", class: "btn opacity" %>
      <% end %>
      <div class="register-forget opacity">HAVE AN ACCOUNT ðŸ‘‰ 
        <%= link_to "SIGN IN", new_session_path(resource_name), class: "text-light" %>
      </div>
    </div>
  </div>
</section>