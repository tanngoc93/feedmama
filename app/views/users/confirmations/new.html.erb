<section class="section-container">
  <div class="div-container">
    <div class="form-container">
      <h5 class="opacity">Resend confirmation instructions</h5>
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "rounded-0" %>
      <%= f.submit "Resend", class: "btn btn-primary" %>
      <% end %>
      <div class="register-forget">
        <%= link_to "Sign up for FREE", new_registration_path(resource_name), class: "text-dark" %>
      </div>
    </div>
  </div>
</section>
